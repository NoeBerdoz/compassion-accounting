<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_invoice_split_wizard_form" model="ir.ui.view">
        <field name="name">invoice.split.wizard.form</field>
        <field name="model">account.invoice.split.wizard</field>
        <field name="arch" type="xml">
            <form string="Invoice splitting">
                <sheet>
                    <p
                    >Add invoice lines you wish to move in another invoice (click on Add an item...).</p>
                    <field name="move_id" invisible="1" />
                    <field
                        name="invoice_line_ids"
                        domain="[('move_id', '=', move_id), ('exclude_from_invoice_tab', '=', False)]"
                        context="{'tree_view_ref': 'sponsorship_compassion.view_invoice_line_partner_tree'}"
                    >
                        <tree>
                            <field name="product_id" />
                            <field name="name" />
                            <field name="contract_id" />
                            <field name="account_id" />
                            <field name="quantity" />
                            <field name="price_unit" />
                            <field name="price_subtotal" />
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button
                        name="split_invoice"
                        type="object"
                        string="Split invoice"
                        class="oe_highlight"
                    />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_split_invoice_wizard" model="ir.actions.act_window">
        <field name="name">Split invoice</field>
        <field name="binding_model_id" ref="account.model_account_move" />
        <field name="res_model">account.invoice.split.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
